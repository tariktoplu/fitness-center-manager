@model Web.Models.Service

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Hizmeti Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsActive" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Kategori</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Hizmet Adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label">Süre (Dk)</label>
                                <input asp-for="DurationMinutes" class="form-control" type="number" />
                                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BasePrice" class="form-label">Ücret (₺)</label>
                                <input asp-for="BasePrice" class="form-control" type="number" />
                                <span asp-validation-for="BasePrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}