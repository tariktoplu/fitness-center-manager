@model IEnumerable<Web.Models.GymBranch>

@{
    ViewData["Title"] = "Spor Salonlarımız";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Şubelerimiz</h2>
        <p class="text-muted">Size en yakın lokasyonu seçin ve spora başlayın.</p>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow border-0 hover-up">
                    <!-- Görsel Varsa Göster, Yoksa Placeholder Koy -->
                    @if(!string.IsNullOrEmpty(item.ImageUrl)) {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    } else {
                        <div class="bg-light text-center py-5 text-muted" style="height: 200px;">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                    }
                    
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted small"><i class="bi bi-geo-alt-fill text-danger"></i> @item.City - @item.Address</p>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-4 text-center">
                        <a asp-action="GymDetails" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">
                            İncele & Hizmetler
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>