@model IEnumerable<Web.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-success">Eğitmenlerimiz</h2>
        <p class="text-muted">Alanında uzman kadromuzla tanışın.</p>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 border-0 shadow hover-up">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(item.ProfileImageUrl))
                            {
                                <img src="~/images/trainers/@item.ProfileImageUrl" class="rounded-circle object-fit-cover border border-3 border-light shadow-sm" width="120" height="120">
                            }
                            else
                            {
                                <div class="bg-secondary rounded-circle mx-auto d-flex align-items-center justify-content-center text-white" style="width: 120px; height: 120px;">
                                    <i class="bi bi-person-fill fs-1"></i>
                                </div>
                            }
                        </div>
                        <h5 class="card-title fw-bold">@item.User.FirstName @item.User.LastName</h5>
                        <p class="text-primary small mb-2">@item.GymBranch.Name</p>
                        
                        <div class="d-flex flex-wrap justify-content-center gap-1 mb-3">
                            @foreach(var spec in item.Specializations)
                            {
                                <span class="badge bg-info text-dark">@spec.Specialization.Name</span>
                            }
                        </div>
                        
                        <p class="card-text text-muted small text-truncate">@item.Biography</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>