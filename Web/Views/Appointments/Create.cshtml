@model Web.Models.ViewModels.BookAppointmentViewModel

@{
ViewData["Title"] = "Randevu Al";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Randevu Oluştur</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- 1. Eğitmen Seçimi -->
                        <div class="mb-3">
                            <label asp-for="TrainerId" class="form-label fw-bold"></label>
                            <select asp-for="TrainerId" class="form-select form-select-lg" asp-items="ViewBag.TrainerId" id="TrainerId">
                                <option value="">-- Önce Eğitmen Seçiniz --</option>
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                        </div>

                        <!-- 2. Tarih Seçimi -->
                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label fw-bold"></label>
                            <input asp-for="AppointmentDate" class="form-control form-control-lg" type="date" id="AppointmentDate" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <!-- 3. Dinamik Saat Seçimi (Burası Değişti) -->
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-bold">Müsait Saatler</label>
                            <select asp-for="StartTime" class="form-select form-select-lg" id="TimeSelect" disabled>
                                <option value="">-- Önce Tarih ve Eğitmen Seçin --</option>
                            </select>
                            <small class="text-muted" id="loadingTime" style="display:none;">
                                <span class="spinner-border spinner-border-sm"></span> Saatler yükleniyor...
                            </small>
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <!-- 4. Hizmet Seçimi -->
                        <div class="mb-3">
                            <label asp-for="ServiceId" class="form-label fw-bold"></label>
                            <select asp-for="ServiceId" class="form-select form-select-lg" asp-items="ViewBag.ServiceId">
                                <option value="">-- Hizmet Seçiniz --</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg shadow">Randevuyu Onayla</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function() {
        // Eğitmen veya Tarih değiştiğinde çalışır
        $('#TrainerId, #AppointmentDate').change(function() {
            loadAvailableHours();
        });

        function loadAvailableHours() {
            var trainerId = $('#TrainerId').val();
            var date = $('#AppointmentDate').val();
            var timeSelect = $('#TimeSelect');
            var loading = $('#loadingTime');

            // Eğer ikisi de seçiliyse sorgu at
            if (trainerId && date) {
                timeSelect.prop('disabled', true);
                loading.show();
                timeSelect.empty().append('<option>Yükleniyor...</option>');

                $.ajax({
                    url: '@Url.Action("GetAvailableHours", "Appointments")',
                    type: 'GET',
                    data: { trainerId: trainerId, date: date },
                    success: function(data) {
                        timeSelect.empty();
                        loading.hide();

                        if (data.length === 0) {
                            timeSelect.append('<option value="">Bu tarihte uygun saat yok</option>');
                        } else {
                            timeSelect.append('<option value="">-- Saat Seçiniz --</option>');
                            $.each(data, function(i, time) {
                                timeSelect.append($('<option></option>').val(time).html(time));
                            });
                            timeSelect.prop('disabled', false);
                        }
                    },
                    error: function() {
                        loading.hide();
                        timeSelect.empty().append('<option>Hata oluştu</option>');
                    }
                });
            } else {
                timeSelect.prop('disabled', true);
                timeSelect.empty().append('<option>-- Önce Tarih ve Eğitmen Seçin --</option>');
            }
        }
    });
</script>
}