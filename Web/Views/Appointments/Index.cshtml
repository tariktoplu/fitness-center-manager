@model IEnumerable<Web.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-calendar-check"></i> Randevularım</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Yeni Randevu Al</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz hiç randevunuz yok. Hemen antrenmanlara başlayın!</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-light">
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Hizmet</th>
                <th>Eğitmen</th>
                <th>Ücret</th>
                <th>Durum</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.StartTime - @item.EndTime</td>
                    <td>@item.GymService.Service.Name</td>
                    <td>@item.Trainer.User.FirstName @item.Trainer.User.LastName</td>
                    <td>@item.TotalPrice ₺</td>
                    <td>
                        @if (item.Status == "Confirmed")
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.Status</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>