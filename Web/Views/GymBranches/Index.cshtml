@model IEnumerable<Web.Models.GymBranch>

@{
    ViewData["Title"] = "Şubeler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-building"></i> Spor Salonu Şubeleri</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Yeni Şube Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Şube Adı</th>
                            <th>Şehir</th>
                            <th>Telefon</th>
                            <th class="text-center">Durum</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.City</td>
                                <td>@item.PhoneNumber</td>
                                <td class="text-center">
                                    @if(item.IsActive) {
                                        <span class="badge bg-success rounded-pill px-3">Aktif</span>
                                    } else {
                                        <span class="badge bg-danger rounded-pill px-3">Pasif</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group" role="group">
                                        <!-- Saat Yönetimi -->
                                        <a asp-action="ManageHours" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Çalışma Saatleri">
                                            <i class="bi bi-clock"></i>
                                        </a>
                                        
                                        <!-- Hizmet/Fiyat Yönetimi -->
                                        <a asp-action="ManageServices" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Hizmet ve Fiyatlar">
                                            <i class="bi bi-list-check"></i>
                                        </a>

                                        <!-- Düzenle -->
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        
                                        <!-- Sil -->
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>