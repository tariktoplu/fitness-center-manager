@model Web.Models.ViewModels.BranchHoursViewModel

@{
    ViewData["Title"] = "Çalışma Saatleri";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">@Model.BranchName - Çalışma Saatleri</h4>
        </div>
        <div class="card-body">
            <form asp-action="ManageHours" method="post">
                <input type="hidden" asp-for="GymBranchId" />
                <input type="hidden" asp-for="BranchName" />

                <table class="table table-bordered">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Gün</th>
                            <th>Kapalı mı?</th>
                            <th>Açılış</th>
                            <th>Kapanış</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Hours.Count; i++)
                        {
                            <tr>
                                <td class="fw-bold bg-light">
                                    <input type="hidden" asp-for="Hours[i].DayOfWeek" />
                                    <input type="hidden" asp-for="Hours[i].DayName" />
                                    @Model.Hours[i].DayName
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" asp-for="Hours[i].IsClosed">
                                    </div>
                                </td>
                                <td>
                                    <input type="time" asp-for="Hours[i].OpeningTime" class="form-control" />
                                </td>
                                <td>
                                    <input type="time" asp-for="Hours[i].ClosingTime" class="form-control" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-info text-white px-5"><i class="bi bi-clock"></i> Saatleri Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>