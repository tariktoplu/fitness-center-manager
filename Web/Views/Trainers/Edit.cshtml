@model Web.Models.ViewModels.TrainerEditViewModel

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Eğitmen Bilgilerini Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    <!-- ENCTYPE: Resim yüklemek için zorunlu -->
                    <form asp-action="Edit" enctype="multipart/form-data">
                        
                        <!-- HIDDEN INPUTS: ID ve Eski Resim Bilgisi İçin Zorunlu -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ExistingImageUrl" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3">Kullanıcı Bilgileri</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3 mt-3">Profil Detayları</h5>
                        
                            
                        <!-- UZMANLIK ALANLARI SEÇİMİ -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Uzmanlık Alanları</label>
                            <div class="card p-3 bg-light">
                                <div class="row">
                                    @{
                                        var specializations = ViewBag.Specializations as List<Web.Models.Specialization>;
                                        if (specializations != null)
                                        {
                                            foreach (var spec in specializations)
                                            {
                                                <div class="col-md-6">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" 
                                                               name="SelectedSpecializationIds" 
                                                               value="@spec.Id" 
                                                               id="spec_@spec.Id"
                                                               @(Model.SelectedSpecializationIds.Contains(spec.Id) ? "checked" : "")>
                                                        <label class="form-check-label" for="spec_@spec.Id">
                                                            @spec.Name
                                                        </label>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>



                        <div class="mb-3">
                            <label asp-for="GymBranchId" class="form-label fw-bold">Çalışacağı Şube</label>
                            <select asp-for="GymBranchId" class="form-select" asp-items="ViewBag.GymBranchId"></select>
                            <span asp-validation-for="GymBranchId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HourlyRate" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Profil Fotoğrafı</label>
                            <div class="d-flex align-items-center gap-3 mb-2">
                                @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                                {
                                    <img src="~/images/trainers/@Model.ExistingImageUrl" width="80" height="80" class="rounded-circle border object-fit-cover" title="Mevcut Resim" />
                                    <small class="text-muted">Mevcut fotoğraf korunacak.</small>
                                }
                                else
                                {
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;">
                                        <i class="bi bi-person fs-2 text-muted"></i>
                                    </div>
                                    <small class="text-muted">Fotoğraf yok.</small>
                                }
                            </div>
                            
                            <label asp-for="ProfileImage" class="form-label small text-primary">Fotoğrafı Değiştir (Opsiyonel)</label>
                            <input asp-for="ProfileImage" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label fw-bold"></label>
                            <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="d-grid gap-2 mt-4 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-warning px-5">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}