@model IEnumerable<Web.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-person-badge"></i> Eğitmen Listesi</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Yeni Eğitmen Ekle</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="text-center mt-3">
                        @if (!string.IsNullOrEmpty(item.ProfileImageUrl))
                        {
                            <img src="~/images/trainers/@item.ProfileImageUrl" class="rounded-circle" width="120" height="120" style="object-fit:cover" alt="Profil" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/120" class="rounded-circle" alt="Yok" />
                        }
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.User.FirstName @item.User.LastName</h5>
                        <span class="badge bg-info text-dark mb-2">@item.GymBranch.Name</span>
                        <p class="card-text text-muted small">
                            @(item.Biography?.Length > 100 ? item.Biography.Substring(0, 100) + "..." : item.Biography)
                        </p>
                        <p class="fw-bold text-success">@item.HourlyRate ₺ / Saat</p>
                    </div>
                    <div class="card-footer bg-white border-top-0 text-center">
                         <button class="btn btn-outline-primary btn-sm">Detaylar</button>
                         <!-- Düzenle/Sil butonları eklenebilir -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>