@model Web.Models.ViewModels.AIRequestViewModel

@{
    ViewData["Title"] = "AI Antrenör";
}

<div class="container mt-5">
    <div class="row">
        <!-- Sol Taraf: Form -->
        <div class="col-md-4">
            <div class="card shadow border-0 bg-light">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-robot"></i> AI Asistan</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Google Gemini AI destekli kişisel antrenörünüz.</p>
                    
                    <form asp-action="GeneratePlan" method="post">
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label fw-bold">Boyunuz (cm)</label>
                            <input asp-for="Height" class="form-control" placeholder="175" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label fw-bold">Kilonuz (kg)</label>
                            <input asp-for="Weight" class="form-control" placeholder="70" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Goal" class="form-label fw-bold">Hedefiniz</label>
                            <select asp-for="Goal" class="form-select">
                                <option>Kilo Vermek</option>
                                <option>Kas Kütlesi Kazanmak</option>
                                <option>Formu Korumak</option>
                                <option>Daha Enerjik Olmak</option>
                            </select>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-magic"></i> Analiz Et
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sağ Taraf: AI Sonucu -->
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.AIResponse))
            {
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                            <h3 class="text-success"><i class="bi bi-check2-circle"></i> Sonuçlar Hazır</h3>
                            <span class="badge bg-dark fs-6">@Model.BMIResult</span>
                        </div>
                        
                        <!-- AI'dan gelen HTML buraya basılacak -->
                        <div class="ai-content">
                            @Html.Raw(Model.AIResponse)
                        </div>
                        
                        <div class="text-end mt-3 pt-2 border-top">
                            <small class="text-muted fst-italic">Powered by Google Gemini AI</small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center mt-5 pt-5 text-muted opacity-50">
                    <i class="bi bi-cpu-fill" style="font-size: 5rem;"></i>
                    <h4 class="mt-3">Sonuçlar burada görünecek</h4>
                    <p>Sol taraftan bilgilerinizi girip analiz butonuna basın.</p>
                </div>
            }
        </div>
    </div>
</div>